{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src"],
  "exclude": ["node_modules"]
}
